DOMAINNAME={{ local_domainname.stdout }}
HOSTNAME={{ local_hostname.stdout }}
LDAP_HOST={{ ansible_fqdn }}
LDAP_PORT=7389
LDAP_BASE_DN={{ ldap_base.stdout }}
LDAP_HOST_DN={{ ldap_hostdn.stdout }}
TLS_REQCERT=demand

# UMC Server
DEBUG_LEVEL=5

# SAML config
SAML_METADATA_URL=http://localhost:8097/realms/ucs/protocol/saml/descriptor
SAML_METADATA_URL_INTERNAL=http://keycloak:8080/realms/ucs/protocol/saml/descriptor
SAML_SP_SERVER=localhost:8000
SAML_PREFER_HTTP=INSECURE

# Path to SSL certificates
PRIVATE_KEY_FILE=/run/secrets/private_key
CA_CERT_FILE=/run/secrets/ca_cert
CERT_PEM_FILE=/run/secrets/cert_pem
LDAP_SECRET=/run/secrets/ldap_secret
MACHINE_SECRET=/run/secrets/machine_secret
