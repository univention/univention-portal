apiVersion: ctlptl.dev/v1alpha1
kind: Registry
name: {{ local_registry_name }}
port: {{ local_registry_port }}
---
apiVersion: ctlptl.dev/v1alpha1
kind: Cluster
product: kind
registry: {{ local_registry_name }}
kindV1Alpha4Cluster:
  name: {{ cluster_name }}
  {% if ingress_enable %}
  nodes:
    - role: control-plane
      kubeadmConfigPatches:
        - |
          kind: InitConfiguration
          nodeRegistration:
          kubeletExtraArgs:
            node-labels: "ingress-ready=true"
      extraPortMappings:
        - containerPort: 80
          hostPort: 80
          protocol: TCP
        - containerPort: 443
          hostPort: 443
          protocol: TCP
  {% endif %}
