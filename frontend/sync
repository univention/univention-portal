#!/bin/sh
# SPDX-License-Identifier: AGPL-3.0-only
# SPDX-FileCopyrightText: 2023-2024 Univention GmbH

dirofscript="$(dirname "$0")"
absname="$(readlink -m "$dirofscript")/"
set -x
# shellcheck disable=SC2068
rsync -av --delete \
  --exclude '.git' \
  --exclude 'sync' \
  --exclude '.gitlab-ci.yml' \
  --exclude 'ci/' \
  --exclude 'node_modules/' \
  --include 'public/fonts/' \
  --exclude 'public/*/' \
  --exclude 'dist/' \
  --exclude 'debian/' \
  --exclude '.env.local' \
  --exclude 'src/assets/mocks/' \
  --exclude 'src/assets/img/' \
  --exclude 'src/tmp/' \
  "$absname" \
  $@
