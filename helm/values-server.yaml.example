---
# Deployment-specific values for the `example` environment for portal-server.
# This is a YAML-formatted file.
# Include the file with the `--values` parameter


## Application-specific
portalserver:
  admin_group: "cn=Domain Admins,cn=groups,dc=univention,dc=intranet"
  environment: "staging"
  editable: "true"
  log_level: "DEBUG"
  ucs_internal_url: "http://portal-server:univention@portal-listener-store-dav/portal-data"
  umc_get_url: "https://portal-server:univention@portal.example.develop.souvap-univention.de/univention/internal/umc/get"
  umc_session_url: "https://portal-server:univention@portal.example.develop.souvap-univention.de/univention/internal/umc/get/session-info"


## Kubernetes ingress
ingress:
  enabled: false
  host: "portal.example.develop.souvap-univention.de"


## Istio based
istio:
  enabled: true
  host: "portal.example.develop.souvap-univention.de"

## Docker image
image:
  tag: "branch-feature-example"


## Container deployment probes
probes:
  liveness:
    enabled: false

  readiness:
    enabled: false

...
