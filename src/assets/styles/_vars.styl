 @import "./_variables.styl"

:root
  // colors
  --color-primary:   #7AB51D
  --color-primary-rgb: red(@--color-primary), green(@--color-primary), blue(@--color-primary)
  --color-grey0:     #1E1E1D
  --color-grey0-rgb: red(@--color-grey0), green(@--color-grey0), blue(@--color-grey0)
  --color-grey8:     #333331
  --color-grey8-rgb: red(@--color-grey8), green(@--color-grey8), blue(@--color-grey8)
  --color-grey25:    #5F5F5C
  --color-grey25-rgb: red(@--color-grey25), green(@--color-grey25), blue(@--color-grey25)
  --color-grey40:    #868681
  --color-grey40-rgb: red(@--color-grey40), green(@--color-grey40), blue(@--color-grey40)
  --color-grey62:    #BDBDBB
  --color-white:     #FFF
  --color-black:     #000
  --color-error:     #DD042D
  --color-success:   #5C8916
  --color-notification-warning: rgba((@--color-error), 0.6)
  --color-notification-success: rgba((@--color-success), 0.6)
  --color-matched-text: var(--color-grey25) // Background color of text in ComboBox drop down that matches typed in phrase

  // header
  --layout-height-header: 3rem
  --layout-height-header-seperator: var(--layout-spacing-unit-small)
  --bgc-content-header: var(--color-grey0)
  --portal-header-height: var(--layout-height-header)

  // body
  --bgc-content-body:   var(--color-grey8)
  --bgc-content-container: var(--color-grey0)

  // fonts
  --font-size-1: 1.5rem // font-size-h1 // font-size-h5
  --font-size-2: 1.25rem // font-size-h2 // font-size-h6
  --font-size-3: 1rem  // font-size-input // font-size-subtitle1
  --font-size-4: 0.875rem // font-size-normal // font-size-body2
  --font-size-5: 0.75rem // font-size-detail // font-size-caption

  --font-size-html:   1rem
  --font-size-body: var(--font-size-4)

  --font-color-contrast-high: var(--color-white)
  --font-color-contrast-middle: var(--color-grey62)
  --font-color-contrast-low: var(--color-grey40)
  --font-color-dark: var(--color-black)
  --font-color-disabled: var(--color-grey40)
  --font-lineheight-normal: 1.5
  --font-lineheight-compact: 1.25
  --font-lineheight-header: 1.3
  --font-weight-bold: 600

  --color-focus: var(--font-color-contrast-high)

  // cursors
  --cursor-disabled: not-allowed

  // border-radius
  --border-radius-interactable: 0.25rem // 5px
  --border-radius-container: 0.5rem // 10px
  --border-radius-notification: var(--border-radius-container)
  --border-radius-tooltip: 0.25rem // 5px
  --border-radius-circles: 50%
  --border-radius-apptile: 12.5% // 20px
  --border-radius-apptile-in-folder: 12.5% // 5px
  --border-radius-apptile-in-tab: 12.5% // 2px
  --border-radius-portal-folder: 10%

  // layout
  --layout-spacing-unit: 0.5rem
  --layout-spacing-unit-small: calc(var(--layout-spacing-unit) / 2)

  // buttons
  --button-size: 36px
  --button-icon-size: 16px
  --button-font-size: var(--font-size-small)
  --button-border-radius: var(--border-radius-interactable)
  --button-icon-border-radius: var(--border-radius-circles)
  --button-bgc-transition: background-color var(--portal-transition-duration)
  --button-icon-bgc: transparent
  --button-icon-bgc-overlay-hover:  var(--color-grey8-rgb)
  --button-icon-bgc-overlay-active: rgba((@--color-white) 0.12)
  --button-icon-bgc-overlay-disabled: transparent
  --button-icon-highlighted-bgc: var(--color-grey0)
  --button-primary-bgc: var(--color-primary)
  --button-primary-bgc-overlay-hover: rgba((@--color-white) 0.12)
  --button-primary-bgc-overlay-active: rgba((@--color-white) 0.20)
  --button-primary-bgc-overlay-disabled: var(--color-grey25)
  --button-bgc: var(--color-grey25)
  --button-bgc-overlay-hover:  var(--color-grey8-rgb)
  --button-bgc-overlay-active: rgba((@--color-white) 0.16)
  --button-bgc-overlay-disabled: var(--color-grey25)
  --button-text-bgc: transparent
  --button-text-bgc-overlay-hover:  var(--color-grey8-rgb)
  --button-text-bgc-overlay-active: rgba((@--color-white) 0.12)
  --button-text-bgc-overlay-disabled: var(--color-grey25)

  // links
  --link-color: var(--color-primary)

  // input fields
  --inputfield-size: 2.75rem
  --inputfield-bgc: var(--bgc-content-body)
  --inputfield-dark-bgc: var(--bgc-content-container)
  --inputfield-width: 20rem

  // shadows
  --box-shadow: 0px 3px 6px rgba((@--color-black) 0.16)

  // apps
  --app-tile-side-length: 8rem

  // Portal Folder
  --portal-folder-tile-width: 33%
  --portal-folder-padding: calc(4 * var(--layout-spacing-unit))

  // transition
  --portal-transition-duration: 250ms 

@media $mqSmartphone
  :root
    --portal-folder-tile-width: 50%
    --portal-folder-padding: calc(2 * var(--layout-spacing-unit))

    --app-tile-side-length: 5.5rem

