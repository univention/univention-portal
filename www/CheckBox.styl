.dijitCheckBox
	width: 1em
	height: @width
	border: 2px solid var(--color-grey40)
	border-radius: 2px
	background: transparent
	transition: background 250ms, border-color 250ms
	box-sizing: content-box
	position: relative

	&:before
		content: ''
		display: block
		width: @width
		height: @width
		position: absolute
		top: 0
		left: 0
		background: url(icons/check_checked.svg)
		background-size: contain
		opacity: 0
		transition: opacity 250ms

	&Checked
		border-color: var(--color-primary)

		&:before
			opacity: 1

.dijitCheckBoxInput
	width: 100%
	height: 100%


.dijitCheckBoxHover,
.dojoxGridCellOver .dijitCheckBox
	background: s('rgba(var(--color-grey40-rgb), 0.4)')
