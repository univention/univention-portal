.umcNotificationSnackbar
	pointer-events: none
	position: fixed
	bottom: 0
	left: 0
	right: 0
	z-index: 2
	display: flex
	justify-content: center

.umcSnackbarNotification
	--bgc: s('rgba(var(--color-grey0-rgb), 0.8)')
	--font-size: var(--font-size-small)
	pointer-events: auto
	border-radius: 8px
	min-width: 288px
	@media (max-width: @min-width)
		min-width: 100%
	max-width: 568px
	min-height: 48px
	padding: 1em
	color: var(--font-color-contrast-high)
	background-color: var(--bgc)
	box-shadow: var(--box-shadow)
	margin-bottom: calc(2 * var(--layout-spacing-unit))
	font-size: var(--font-size)
	position: relative

.umcNotificationMessageContainer
	transition: opacity 0s 0.3s

.umcNotificationMessageContainer
	display: grid
	grid-gap: 0.5em
	grid-template-columns: auto auto
	grid-template-areas: "message close"

.umcSnackbarNotification
	&Warning
		--bgc: var(--color-error)
	&Success
		--bgc: var(--color-primary)

	&Warning,
	&Success
		.umcNotificationMessageContainer
			grid-template-columns: auto auto auto
			grid-template-areas: "icon message close"

		.umcNotificationMessageIconContainer
			grid-area: icon
			display: flex
			align-items: center
			height: calc(var(--font-size) * var(--font-lineheight-normal))
			.umcNotificationMessageIcon
				display: inline-block
				width: 1em
				height: 1em


.umcNotificationMessageIcon
	grid-area: icon

.umcNotificationMessage
	grid-area: message

.umcNotificationMessageClose
	grid-area: close
	margin-left: 1em
	justify-self: end

.umcNotificationActionButton
	grid-column: 1 / 3
	text-align: right
	text-transform: uppercase
	font-weight: 500
	height: 20px
	line-height: 20px
	border: none
	background-color: transparent
	color: green
	
